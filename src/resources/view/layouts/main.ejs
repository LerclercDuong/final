<script >

class Calendar {
    constructor() {
       this.CurrentTime = new Date()
       this.month = this.CurrentTime.getMonth()
       this.date = this.CurrentTime.getDate()
       this.year = this.CurrentTime.getFullYear()
    }

    lastSundayOfEachMonths(year) {
        var lastDay = [31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31];
        var sundays = [];
        var date, month;
        if (year % 4 === 0 && (year % 100 !== 0 || year % 400 === 0)) {
            lastDay[2] = 29;
        }
        for (date = new Date(), month = 0; month < 12; month += 1) {
            date.setFullYear(year, month, lastDay[month]);
            sundays.push(date.getDate() - date.getDay());
        }
        return sundays;
    }
    renderCalendar(ls){
        var lastDay = [31, 28, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31];
        var monthName= ["January","February","March","April","May","June","July",
            "August","September","October","November","December"];
        month.innerHTML = `<p> ${monthName[this.month]} </p>`;
        for(  ls; ls <= lastDay[this.month-1]; ls ++)
        {
             const dayNode = document.createElement('li')
             dayNode.style.color = 'rgb(138, 138, 138)';
             const txt = document.createTextNode(`${ls}`)
                 dayNode.appendChild(txt)
                days.appendChild(dayNode);
         }

         for(var i = 1; i <= lastDay[this.month - 2]; i++){
            var currentDay = this.date
            if(i == currentDay){
                const dayNode = document.createElement('li')
                dayNode.className = "currentDay"
            const txt = document.createTextNode(`${i}`)
                dayNode.appendChild(txt)
               days.appendChild(dayNode);
            }else{
                const dayNode = document.createElement('li')
            const txt = document.createTextNode(`${i}`)
                dayNode.appendChild(txt)
               days.appendChild(dayNode);
            }
            
         }
    }

}

